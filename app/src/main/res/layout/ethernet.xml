<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Connection Type"
    android:gravity="center"
    android:layout_marginTop="20dp"
    android:id="@+id/tvType"/>
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content" >
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:id="@+id/rDhcp"
        android:text="DHCP"
        android:checked="true"></RadioButton>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:id="@+id/rStatic"
        android:text="Static Ip"></RadioButton>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IP Address"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff4886" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/etIp"
        android:hint="IP Address"
        android:digits="0123456789."/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subnet Mask :"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff4886" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/etMask"
        android:hint="Subnet Mask"
        android:digits="0123456789."/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gateway :"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff4886" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etGateway"
        android:gravity="center"
        android:hint="GateWay"
        android:digits="0123456789."/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DNS Address :"
        android:id="@+id/textView7"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff4886" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etDns"
        android:gravity="center"
        android:hint="DNS Address"
        android:digits="0123456789."/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/btnSave"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:id="@+id/btnReset"/>
    </LinearLayout>
</LinearLayout>