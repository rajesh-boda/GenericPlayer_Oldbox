<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bg">


    <RelativeLayout
        android:id="@+id/settings_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:id="@+id/qezy_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/qezymeida_logo"/>

        <ImageView
            android:id="@+id/idea_bytes_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_toRightOf="@+id/qezy_logo"
            android:src="@drawable/ideabytes_logo"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/settings"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/settings"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/settings"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:text="Settings"/>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linear"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/player_layout"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:padding="3dp"
            android:background="#00A99D"
            android:clickable="true"
            android:tint="@color/colorAccent">

            <ImageView
                android:layout_width="55dp"
                android:id="@+id/player"
                android:layout_height="55dp"
                android:src="@drawable/player"
                android:padding="3dp"
                android:layout_centerInParent="true"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:background="#00544E"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player"
                    android:textSize="18dp"

                    android:textColor="#ffffff"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ethernet_layout"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="#39B54A"
            android:clickable="true"
            android:visibility="gone"
            android:padding="3dp"
            android:tint="@color/colorAccent"
            android:layout_marginLeft="5dp">
            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/ethernet"
                android:layout_centerInParent="true"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:layout_alignParentBottom="true"
                android:background="#1C5A25"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ethernet"
                    android:textSize="18dp"

                    android:textColor="#ffffff"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bandwidth_layout"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="#0C8AA5"
            android:padding="3dp"
            android:clickable="true"
            android:tint="@color/colorAccent"
            android:layout_marginLeft="5dp">
            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/bandwidth"
                android:layout_centerInParent="true"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:layout_alignParentBottom="true"
                android:background="#064552"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bandwidth Check"
                    android:textSize="18dp"

                    android:textColor="#ffffff"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/exit_layout"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="#D3710D"
            android:padding="3dp"
            android:clickable="true"
            android:tint="@color/colorAccent"
            android:layout_marginLeft="5dp">
            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/exit"
                android:layout_centerInParent="true"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:layout_alignParentBottom="true"
                android:background="#693806"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exit"
                    android:textSize="18dp"

                    android:textColor="#ffffff"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>
    <FrameLayout
        android:layout_below="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_container"
        android:layout_centerInParent="true">

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="New Text"-->
        <!--android:id="@+id/ip_address"-->
        <!--android:layout_gravity="center" />-->
    </FrameLayout>


</RelativeLayout>